# ==========================================================
# üîí Basic Security & Rewrite Config for Nasab Family Tree PWA
# ==========================================================

# Ensure correct default index
DirectoryIndex index.php index.html

# ----------------------------------------------------------
# üîÅ ROUTING: Allow router.php to handle unknown routes
# ----------------------------------------------------------
RewriteEngine On

# Don‚Äôt rewrite existing files or directories
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Send all unmatched requests to router.php
RewriteRule ^ router.php [L,QSA]

# ----------------------------------------------------------
# üöÄ LITESPEED CACHE SETTINGS
# ----------------------------------------------------------
<IfModule LiteSpeed>
    # Disable cache for dynamic or frequently changing routes
    CacheDisable public /pages/
    CacheDisable public /api/
    CacheDisable public /auth/
    CacheDisable public /assets/js/
    CacheDisable public /assets/json/
    
    # Keep cache enabled for static files (images, CSS)
    CacheEnable public /
    
    # Purge cache automatically when files change
    CacheSmartPurge On
</IfModule>

# ----------------------------------------------------------
# üåê MIME TYPES & CHARACTER SET
# ----------------------------------------------------------
AddDefaultCharset utf-8
AddType text/html .html
AddType text/javascript .js
AddType text/css .css
AddType application/json .json
AddType image/svg+xml .svg

# ----------------------------------------------------------
# üîí Security Headers
# ----------------------------------------------------------
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# ----------------------------------------------------------
# üß≠ CORS for PWA (if needed for API or assets)
# ----------------------------------------------------------
<IfModule mod_headers.c>
    <FilesMatch "\.(js|json|css|png|jpg|svg|webp|ico|manifest|html)$">
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule>

# ----------------------------------------------------------
# üïì Cache-Control for static files (client browser cache)
# ----------------------------------------------------------
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 7 days"
    ExpiresByType text/javascript "access plus 7 days"
    ExpiresByType application/javascript "access plus 7 days"
    ExpiresByType image/png "access plus 30 days"
    ExpiresByType image/jpeg "access plus 30 days"
    ExpiresByType image/svg+xml "access plus 30 days"
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# ----------------------------------------------------------
# ‚úÖ END OF CONFIG
# ----------------------------------------------------------
